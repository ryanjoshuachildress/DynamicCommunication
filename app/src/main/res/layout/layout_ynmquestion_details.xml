<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:background="@drawable/ic_background"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <com.ryanjoshuachildress.dynamiccommunication.utils.MSPTextViewBold

        android:id="@+id/tvQuestionDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Question Here"
        android:textColor="@color/color_white"
        android:textSize="@dimen/splash_title_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvQuestionDetails">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ryanjoshuachildress.dynamiccommunication.utils.MSPTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Total answers"
                android:textColor="@color/color_white" />

            <com.ryanjoshuachildress.dynamiccommunication.utils.MSPTextView
                android:id="@+id/tvAnsweredCountDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="?"
                android:textColor="@color/color_white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ryanjoshuachildress.dynamiccommunication.utils.MSPTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Yes"
                android:textColor="@color/color_white" />

            <com.ryanjoshuachildress.dynamiccommunication.utils.MSPTextView
                android:id="@+id/tvYesCountDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="?"
                android:textColor="@color/color_white" />

            <com.ryanjoshuachildress.dynamiccommunication.utils.MSPTextView
                android:id="@+id/tvYesCountDetailsPercentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="?"
                android:textColor="@color/color_white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ryanjoshuachildress.dynamiccommunication.utils.MSPTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="No"
                android:textColor="@color/color_white" />

            <com.ryanjoshuachildress.dynamiccommunication.utils.MSPTextView
                android:id="@+id/tvNoCountDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="?"
                android:textColor="@color/color_white" />

            <com.ryanjoshuachildress.dynamiccommunication.utils.MSPTextView
                android:id="@+id/tvNoCountDetailsPercentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="?"
                android:textColor="@color/color_white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ryanjoshuachildress.dynamiccommunication.utils.MSPTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Maybe"
                android:textColor="@color/color_white" />

            <com.ryanjoshuachildress.dynamiccommunication.utils.MSPTextView
                android:id="@+id/tvMaybeCountDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="?"
                android:textColor="@color/color_white" />

            <com.ryanjoshuachildress.dynamiccommunication.utils.MSPTextView
                android:id="@+id/tvMaybeCountDetailsPercentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="?"
                android:textColor="@color/color_white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.ryanjoshuachildress.dynamiccommunication.utils.MSPButton
                android:id="@+id/btnYNMQuestionDetailsClose"
                android:text="Close"
                app:layout_constraintTop_toBottomOf="@+id/etQuestion"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                android:layout_width="match_parent"
                android:background="@drawable/button_background"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <com.ryanjoshuachildress.dynamiccommunication.utils.MSPButton
                android:id="@+id/btnYNMQuestionDetailsNextQuestion"
                android:text="Next Question"
                app:layout_constraintTop_toBottomOf="@+id/btnSave"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                android:layout_width="match_parent"
                android:background="@drawable/button_background"
                android:layout_weight=".5"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>