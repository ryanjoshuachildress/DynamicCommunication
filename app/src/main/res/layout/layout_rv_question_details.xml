<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/ivRVQuestionImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:scaleType="fitCenter"
        android:src="@drawable/question_image_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.ryanjoshuachildress.dynamiccommunication.utils.MSPTextView
            android:id="@+id/tvRVQuestionID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:layout_weight="1"
            android:text="QuestionID"
            android:textSize="24sp" />

        <com.ryanjoshuachildress.dynamiccommunication.utils.MSPEditText
            android:id="@+id/tvRVQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:layout_weight="1"
            android:text="Question"
            android:textSize="24sp" />
        <RadioGroup
            android:id="@+id/rgRating"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            android:orientation="horizontal">

            <com.ryanjoshuachildress.dynamiccommunication.utils.MSPRadioButton
                android:id="@+id/rbG"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin"
                android:layout_weight="1"
                android:background="@drawable/drawable_gender_tab_selector"
                android:textColor="@drawable/drawable_gender_tab_text_color_selector"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="G" />

            <com.ryanjoshuachildress.dynamiccommunication.utils.MSPRadioButton
                android:id="@+id/rbPG"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin"
                android:layout_weight="1"
                android:background="@drawable/drawable_gender_tab_selector"
                android:textColor="@drawable/drawable_gender_tab_text_color_selector"
                android:button="@null"
                android:gravity="center"
                android:text="PG" />

            <com.ryanjoshuachildress.dynamiccommunication.utils.MSPRadioButton
                android:id="@+id/rbR"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/margin"
                android:background="@drawable/drawable_gender_tab_selector"
                android:textColor="@drawable/drawable_gender_tab_text_color_selector"
                android:button="@null"
                android:gravity="center"
                android:text="R" />

            <com.ryanjoshuachildress.dynamiccommunication.utils.MSPRadioButton
                android:id="@+id/rbXXX"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/drawable_gender_tab_selector"
                android:textColor="@drawable/drawable_gender_tab_text_color_selector"
                android:button="@null"
                android:gravity="center"
                android:hint="Everything Goes"
                android:text="XXX" />

        </RadioGroup>

    </LinearLayout>

</LinearLayout>